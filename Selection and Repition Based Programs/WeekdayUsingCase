#PROGRAM : read number and display week days
#!/bin/bash -x
read -p "Enter the Number" Number
case $number in
0)
	echo"Sunday"
	;;
1)
        echo"Monday"
        ;;
2)
        echo"Tuesday"
        ;;
3)
        echo"Wednesday"
        ;;
4)
        echo"Thursday"
        ;;
5)
        echo"Friday"
        ;;
6)
        echo"Saturday"
        ;;
7)
	echo"Invalid day"
	;;
esac


